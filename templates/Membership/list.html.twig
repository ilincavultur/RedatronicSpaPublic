{% extends 'Membership/base.html.twig' %}


{% block head %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a href="{{ path('app_membership_list') }}" class="btn btn-light">
                Memberships
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">

                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a href="{{ path('app_new_membership') }}" class="btn btn-light">
                            Add New Membership <i class="fa fa-plus"></i>
                        </a>
                    </li>
                </ul>

                <form method="get" class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" value="{{ app.request.get('search') is defined ? app.request.get('search') }}">
                    <button class="btn btn-light">
                        Search Membership
                    </button>
                </form>

            </div>

        </nav>

        <title>{% block title %}List{% endblock %}</title>

    </head>
{% endblock %}



{% block body %}




    <table class="table">
        <thead>
        <tr class="col text-center">
            <th>Client Name</th>
            <th>Age</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>

        </thead>

        <tbody>
        {% for membership in pager.currentPageResults %}
            <tr class="col text-center">
                <td> {{ membership.ClientName }}</td>
                <td> {{ membership.Age }}</td>
                <td> {{ membership.Type }}</td>
                <td>

                    <ul class="list-inline m-0">

                        <li class="list-inline-item">

                            <a href="{{ path('app_membership_edit', {"id":membership.id}) }}" class="btn btn-success btn-sm">  <i class="fa fa-edit" style="font-size:20px"></i>
                            </a>

                        </li>
                        <li class="list-inline-item">


                            <a href="{{ path('app_membership_delete', {"id":membership.id}) }}" class="btn btn-danger btn-sm"> <i class="material-icons" style="font-size:20px">delete_forever</i>
                            </a>


                        </li>
                        <li class="list-inline-item">


                            <a href="{{ path('app_membership_showDetails', {"id":membership.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-list" style="font-size:20px"></i>
                            </a>



                        </li>


                    </ul>

                </td>



            </tr>



        {% endfor %}


        </tbody>


    </table>


    <div class="fixed-bottom">
        <div class="row">
            <div class="col-sm-12">
                <nav aria-label="Page navigation example" class="p-2 mb-1 bg-light text-dark" >
                    <ul class="pagination justify-content-center">

                        {{ pagerfanta(pager,'twitter_bootstrap4' ) }}

                    </ul>
                </nav>
            </div>
        </div>
    </div>



    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>





{% endblock %}
