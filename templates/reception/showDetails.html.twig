{% set uniqueId = uniqueId() %}
<div id="{{ uniqueId }}" class="modal smart-modal" data-backdrop="false" data-keyboard="false" data-href="{{ path('app_new_reception') }}" >
    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">
                <h4  class="col text-center">Reception {{ reception.id }}</h4>
            </div>
            <div class="modal-body">

                <table class="table">
                    <thead>

                    <tr class="col text-center">

                        <th>Age</th>
                        <th>Package</th>
                        <th>Products</th>
                        <th>Total Services</th>
                        <th>Total Access</th>
                        <th>Credit</th>
                        <th>Total</th>
                    </tr>

                    </thead>

                    <tbody>

                    <tr class="col text-center">
                        <td> {{ reception.Age }}</td>
                        <td>
                            {{ reception.Package.Name}}
                        </td>
                        <td>
                            {% for product in reception.Products %}
                                <li class="col text-center">
                                    {{ product.Name }}
                                </li>
                            {% endfor %}
                        </td>
                        <td>
                            {{ reception.totalServices }}
                        </td>
                        <td>
                            {{ reception.totalAccess }}
                        </td>

                        <td>
                            {{ reception.Credit }}
                        </td>
                        <td>
                            {{ reception.totalSum}}
                        </td>
                    </tr>

                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-modal-close-no-refresh" >{{ 'Exit'|trans }}</button>

            </div>

        </div>

    </div>
</div>


