{% extends 'Package/base.html.twig' %}


{% block head %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src='https://kit.fontawesome.com/a076d05399.js'></script>

        <style>
            #navi{
                flex: 1;
                margin: auto !important;
                display: flex;
                justify-content: space-between;
            }
            #form{
                padding-top: 30px;
                align-items: center;
                justify-content: space-around;
                display: flex;
                float: none;
            }
        </style>

        <nav class="navbar navbar-expand-lg navbar-light bg-light " id="navi">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav nav-fill w-100 align-items-start">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_homepage') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_reception_list') }}">Receptions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product_list') }}">Products</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_package_list') }}">Packages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_membership_list') }}">Memberships</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_zone_list') }}">Zones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_list') }}">Users</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class='fas fa-user-alt'></i>
                            {{ app.user.username }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">Settings</a>
                            <a class="dropdown-item" href="{{ path('app_logout')}}">Log Out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a href="{{ path('app_package_list') }}" class="btn btn-light">
                Packages
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>

        <title>{% block title %}Packages{% endblock %}</title>

    </head>
{% endblock %}



{% block body %}

    <div id="form">



    {{ form_start(user_form) }}

    {{ form_row(user_form.Name) }}
    {{ form_row(user_form.Price) }}
    {{ form_row(user_form.Zones) }}
    {{ form_row(user_form.Availability) }}
    {{ form_row(user_form.NoOfEntries) }}

    <button type="submit" class="btn btn-light"> Add </button>


    {{ form_end(user_form) }}


    </div>



    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>



{% endblock %}
